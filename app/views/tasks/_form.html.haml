= form_for @task do |f|
  - if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :complexity
    = f.number_field :complexity
  .field
    = f.label :status
    = f.number_field :status
  .field
    = f.label :project
    = f.text_field :project
  .actions
    = f.submit 'Save'
