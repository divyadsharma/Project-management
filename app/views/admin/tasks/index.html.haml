.row
  %ol.breadcrumb
    %li
      %a{:href => "#"}
        %em.fa.fa-home
    %li.active Tasks
.row
  .col-md-12.p-t-15
    .panel.panel-default
      .panel-heading
        .btn-group.pull-right
          %a.btn.btn-default.btn-sm{href: new_admin_user_task_path(current_user)} Add Task
        %h4 Task Listing
      .panel-body
        .x-scrolling-wrapper
          - if @tasks.blank?
            No tasks yet
          - else
            %table.table.table-bordered.table-hover.table-striped
              %thead
                %tr
                  %th.list_id_column ID
                  %th Title
                  %th Description
                  %th Complexity
                  %th Status
                  %th Project
                  %th Developer
                  %th Actions
              %tbody
                - @tasks.each do |task|
                  %tr
                    %td= task.id
                    %td= task.title
                    %td= task.description
                    %td= task.complexity
                    %td= task.status
                    %td= task.project.try(:title)
                    %td= task.user.try(:email)
                    %td
                      = link_to edit_admin_user_task_path(current_user, task), class: 'btn btn-default btn-sm' do
                        .fa.fa-pencil
                      |
                      = link_to admin_user_path(current_user, task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-sm' do
                        .fa.fa-trash-o
      - if @tasks.present?
        = will_paginate @tasks, class: 'apple_pagination'

